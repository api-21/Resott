<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_background_color"
    android:padding="@dimen/lytPadding"
    tools:context=".fragments.Profile">


    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="100dp"
        android:background="@drawable/edit_text_background"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"></ImageView>

    <ImageView
        android:id="@+id/btn_change_profile_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_edit_black_24dp"
        android:background="@drawable/edit_text_background"
        app:layout_constraintBottom_toBottomOf="@+id/profile_image"
        app:layout_constraintEnd_toEndOf="@+id/profile_image"
        app:layout_constraintStart_toEndOf="@+id/profile_image"
        app:layout_constraintTop_toBottomOf="@+id/profile_image"></ImageView>

    <TextView
        android:id="@+id/txt_username"
        style="@style/Theme.TextStyleBold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Username"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_change_profile_image"
        app:layout_constraintVertical_bias="0.02999971"></TextView>

    <TextView
        android:id="@+id/txt_user_email"
        style="@style/Theme.TextStyleRegular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="example@gmail.com"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_username"></TextView>

    <TextView
        android:id="@+id/textView8"
        style="@style/Theme.TextStyleBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_user_email"
        app:layout_constraintVertical_bias="0.02999971" />

    <EditText
        android:id="@+id/edt_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_background"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:drawablePadding="@dimen/lytPadding"
        android:drawableTint="@color/textColor"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="@dimen/lytPadding"
        android:text="Abhinash Singh"
        android:textColor="@color/textColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintVertical_bias="0.02999971" />

    <TextView
        android:id="@+id/textView10"
        style="@style/Theme.TextStyleBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email-Id"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/edt_username"
        app:layout_constraintTop_toBottomOf="@+id/edt_username"
        app:layout_constraintVertical_bias="0.02999971" />

    <EditText
        android:id="@+id/edt_user_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_background"
        android:drawableLeft="@drawable/ic_mail_black_24dp"
        android:drawablePadding="@dimen/lytPadding"
        android:drawableTint="@color/textColor"
        android:hint="example@gmail.com"
        android:inputType="textEmailAddress"
        android:padding="@dimen/lytPadding"
        android:textColor="@color/textColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        app:layout_constraintVertical_bias="0.02999971"></EditText>


    <TextView
        android:id="@+id/textView11"
        style="@style/Theme.TextStyleBold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mobile Number"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_user_email"
        app:layout_constraintVertical_bias="0.02999971">

    </TextView>

    <EditText
        android:id="@+id/edt_user_number"
        style="@style/Theme.TextStyleMedium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_background"
        android:drawableLeft="@drawable/ic_phone_black_24dp"
        android:drawablePadding="@dimen/lytPadding"
        android:drawableTint="@color/textColor"
        android:hint="+91 8318488411"
        android:inputType="phone"
        android:padding="@dimen/lytPadding"
        android:textColor="@color/textColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:layout_constraintVertical_bias="0.02999971">

    </EditText>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_delete_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Now"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/edt_user_number"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
